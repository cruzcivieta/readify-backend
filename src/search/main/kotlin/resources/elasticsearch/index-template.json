{
  "index_patterns": "books*",
  "version": 1,
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "author": {
        "type": "keyword"
      },
      "title": {
        "type": "text",
        "analyzer": "spanish_index_analyzer"
      },
      "summary": {
        "type": "text",
        "analyzer": "spanish_index_analyzer"
      },
      "cover": {
        "type": "keyword"
      },
      "completionPercentage": {
        "type": "integer"
      },
      "status": {
        "type": "keyword"
      },
      "price": {
        "properties": {
          "amount": {
            "type": "float"
          },
          "currency": {
            "type": "keyword"
          }
        }
      },
      "finishedAt": {
        "type": "date",
        "format": "strict_date_time"
      }
    }
  },
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "analysis": {
        "filter": {
          "spanish_stop": {
            "type": "stop",
            "stopwords": "_spanish_"
          },
          "spanish_stemmer": {
            "type": "stemmer",
            "language": "light_spanish"
          }
        },
        "analyzer": {
          "spanish_index_analyzer": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "spanish_stop",
              "spanish_stemmer",
              "asciifolding"
            ]
          }
        }
      }
    }
  }
}